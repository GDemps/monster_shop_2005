<h1><%= @merchant.name %></h1>

<section>
  <ul>
    <li><%= @merchant.address %></li>
    <li><%= @merchant.city %></li>
    <li><%= @merchant.state %></li>
    <li><%= @merchant.zip %></li>
  </ul>
</section>

<%= link_to "My Items", "/merchant/items" %>

<section id="order-info-1">
    <%= link_to "Order #{@merchant.orders_id}", "/merchant/orders/#{@merchant.orders_id}", method: :get  %>
    <p>Created order on: <%= @merchant.order_creation %></p>
    <p>Total Quantity: <%= @merchant.total_quantity %></p>
    <p>Total Value: <%= number_to_currency(@merchant.total_value) %></p>
</section>
