<h1><%= @merchant.name %></h1>

<section>
  <ul>
    <li><%= @merchant.address %></li>
    <li><%= @merchant.city %></li>
    <li><%= @merchant.state %></li>
    <li><%= @merchant.zip %></li>
  </ul>
</section>

<%= link_to "My Items", "/merchant/items" %>
<%= link_to 'View Bulk Discounts', '/merchant/discounts' %>


<% @order.each do |ord| %>
  <section id="order-info-<%= ord.id %>">
    <% if ord.status == 'pending' %>
      <%= link_to "Order #{ord.id}", "/merchant/orders/#{ord.id}", method: :get  %>
      <p>Created order on: <%= ord.created_at %></p>
      <p>Total Quantity: <%= ord.total_quantity %></p>
      <p>Total Value: <%= number_to_currency(ord.grandtotal) %></p>
    <% end %>
  </section>
  <% end %>
