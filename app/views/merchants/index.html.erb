<h1 align = "center">Merchants</h1>
<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item">
      <% if current_user && current_user.role == "admin" %>
          <h2><%=link_to merchant.name, "admin/merchants/#{merchant.id}"%></h2>
          <% if merchant.status == 'Enabled' %>
            <section id="merchant-<%= merchant.id %>">
              <%= form_tag "/admin/merchants/#{merchant.id}", method: :patch do %>
                <%= submit_tag 'disable' %>
              <% end %>
            </section>
          <% elsif merchant.status == 'Disabled' %>
              <section id="merchant-<%= merchant.id %>">
                <%= form_tag "/admin/merchants/#{merchant.id}", method: :patch do %>
                  <%= submit_tag 'enable' %>
                <% end %>
              </section>
          <% end %>
        <% else %>
          <h2><%=link_to merchant.name, "/merchants/#{merchant.id}"%></h2>
      <% end %>
    </section>
  <% end %>
</section>
